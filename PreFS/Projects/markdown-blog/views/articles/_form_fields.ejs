<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" required value="<%= article.title%>">               <!--"value"..? - Setting the default values to be the earlier edited ones-->

</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description%></textarea>    <!--"value"..? - Setting the default values to be the earlier edited ones-->

</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown%></textarea>             <!--"value"..? - Setting the default values to be the earlier edited ones-->

</div>


<a href="/" class="btn btn-secondary mt-2">Cancel</a>
<button type="submit" class="btn btn-primary mt-2">Save</button>